@using QuanLyTaiSan_UserManagement.Models;
@{
    ViewBag.Title = "Thêm cán bộ sử dụng";
    Layout = "~/Views/Share/_LayoutPage1.cshtml";
}
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            @using (Html.BeginForm("CreateUser", "Employees", FormMethod.Post, new { @enctype = "multipart/form-data", @class = "form-horizontal" }))
            {
                @Html.AntiForgeryToken()
                <header class="panel-heading mypanel">
                    <a class="edit panel-default" style="margin-right:10px" href="@Url.Action("UserManagement", "Employees")">
                        <span class="icon-border">
                            <i class="icon-arrow-left"> </i>
                        </span>
                    </a>
                    Thêm cán bộ sử dụng
                </header>
                <div class="panel-body">
                    <div class="col-md-6">
                        <div class="form-group m-bot15 clearfix ">
                            <label class="control-label col-md-4 ">UserName</label>
                            <div class="col-md-8 ">
                                <input class="form-control myctr form" data-val="true" data-val-required="UserName không được để trống !" name="UserName" type="text" autocomplete="off">
                                <span class="field-validation-valid text-danger" data-valmsg-for="UserName" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group m-bot15 clearfix">
                            <label class="control-label col-md-4 ">Tên Đầy Đủ</label>
                            <div class="col-md-8 ">
                                <input class="form-control myctr form" data-val="true" data-val-required="Tên đầy đủ không được để trống !" name="FullName" type="text" autocomplete="off">
                                <span class="field-validation-valid text-danger" data-valmsg-for="FullName" data-valmsg-replace="true"></span>
                            </div>
                        </div>
                        <div class="form-group m-bot15 clearfix ">
                            <label class="control-label  col-md-4 ">Email</label>
                            <div class="col-md-8 ">
                                <input type="email" class="form-control myctr form" name="Email" data-parsley-trigger="change" autocomplete="off">
                            </div>
                        </div>
                        <div class="form-group m-bot15 clearfix ">
                            <label class="control-label col-md-4 ">Phone</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control myctr form" name="PhoneNumber">
                            </div>
                        </div>
                        <div class="form-group m-bot15 clearfix">
                            <label class="control-label col-md-4 ">Địa Chỉ</label>
                            <div class="col-md-8">
                                <textarea class="form-control form myctr" rows="2" id="comment" name="Address"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group m-bot15 clearfix ">
                            <label class="control-label col-md-4 ">Đơn vị</label>
                            <div class="col-md-8">
                                <select class="input-large form-control myctr form-control" name="Department" id="Department" data-val="true" data-val-required="Vui lòng chọn đơn vị !">
                                    <option value="" selected> Chọn đơn vị </option>
                                    @foreach (var item in ViewData["Department"] as IList<ProjectDKC>)
                                    {
                                        <option value="@item.Id"> @item.ProjectName </option>
                                    }

                                </select>
                                <span class="field-validation-valid text-danger" data-valmsg-for="Department" data-valmsg-replace="true"></span>

                            </div>
                        </div>
                        <div class="form-group m-bot15 clearfix ">
                            <label class="control-label col-md-4 ">Vị Trí</label>
                            <div class="col-md-8">
                                <input type="text" class="form-control myctr form" name="Position">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="text-align: center">
                    <button type="submit" class="btn btn-primary"> Lưu   </button>
                    <button type="button" class="btn btn-danger">@Html.ActionLink("Hủy", "UserManagement", "Employees")</button>

                </div>
            }
        </section>
    </div>
</div>
<script>
    $('.CreateUser').addClass('active');
    $('.Tool').addClass('active');
</script>
@Scripts.Render("~/bundles/jqueryval")
